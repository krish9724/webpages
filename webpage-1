      const imageSlider = document.getElementById('imageSlider');

      function swipeImages() {
        const firstImage = imageSlider.children[0];
        imageSlider.style.transition = 'transform 1s ease-in-out';
        imageSlider.style.transform = 'translateX(-100%)';

        // Reset the transformation after transition ends
        setTimeout(() => {
          imageSlider.style.transition = 'none';
          imageSlider.style.transform = 'translateX(0)';
          imageSlider.appendChild(firstImage);
        }, 1000);
      }

      setInterval(swipeImages, 3000); // Change images every 3 seconds
    </script>


